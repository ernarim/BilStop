<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/black"
    tools:context=".ProfileFragment">

    <!-- TODO: Update blank fragment layout -->

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewProfile1"
        android:layout_width="match_parent"
        android:layout_height="140sp"
        android:layout_margin="20sp"
        app:cardBackgroundColor="@color/orange"
        app:cardCornerRadius="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/nameSurnameText"
                android:layout_width="218dp"
                android:layout_height="38dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="16dp"
                android:text="Name Surname"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="28sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imageView"
                app:layout_constraintTop_toTopOf="parent" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imageView"
                android:layout_width="114dp"
                android:layout_height="110dp"
                android:layout_marginStart="15dp"
                android:baselineAlignBottom="false"
                android:clickable="false"
                android:src="@drawable/ic_launcher_background"
                app:civ_border_width="1sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/emailProfileText"
                android:layout_width="218dp"
                android:layout_height="19dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="15dp"
                android:text="email"
                android:textAlignment="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/nameSurnameText" />

            <ImageButton
                android:id="@+id/notificationsImageButton"
                android:layout_width="35sp"
                android:layout_height="35sp"
                android:layout_marginTop="11dp"
                android:layout_marginEnd="12dp"
                android:layout_marginBottom="12dp"
                android:src="@drawable/ic_baseline_notifications_24"
                android:background="@drawable/roundcorner"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/emailProfileText"
                tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck"
                tools:src="@drawable/ic_baseline_notifications_24"
                tools:visibility="visible" />

            <ImageButton
                android:id="@+id/editImageButton"
                android:layout_width="35sp"
                android:layout_height="35sp"
                android:layout_marginTop="11dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="12dp"
                android:src="@drawable/ic_baseline_edit_24"
                android:background="@drawable/roundcorner"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/notificationsImageButton"
                app:layout_constraintTop_toBottomOf="@+id/emailProfileText"
                tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck"
                tools:src="@drawable/ic_baseline_edit_24" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>