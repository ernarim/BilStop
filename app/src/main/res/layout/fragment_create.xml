<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">

    <!-- TODO: Update blank fragment layout -->

    <Button
        android:id="@+id/fromButton"
        android:layout_width="240sp"
        android:layout_height="60sp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="@color/orange"
        android:text="somewhere from Bilkent"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textSize="16sp"
        app:cornerRadius="10sp"
        app:layout_constraintBottom_toTopOf="@+id/toButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="parent" />

    <Button
        android:id="@+id/toButton"
        android:layout_width="240sp"
        android:layout_height="60sp"
        android:backgroundTint="@color/orange"
        android:text="to Bilkent"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:cornerRadius="10sp"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fromButton" />

    <TextView
        android:id="@+id/titleMain"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:layout_marginBottom="12dp"
        android:layout_marginHorizontal="16dp"
        android:textAlignment="center"
        android:text="Are you going"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/fromButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>